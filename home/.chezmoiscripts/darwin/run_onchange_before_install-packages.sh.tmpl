#!/bin/bash

set -eufo pipefail

{{ $brews := list
     "bitwarden-cli"
     "curl"
     "wget"
     "gnu-sed"
     "git"
     "git-lfs"
     "jq"
     "yq"
     "starship"
     "volta"
     "go"
     "golangci-lint"
     "kubernetes-cli"
     "helm"
     "minikube"
     "terraform"
     "shellcheck"
     "ffmpeg" 
     "dockutil"
-}}

{{ $casks := list
     "microsoft-teams"
     "bitwarden"
     "firefox"
     "google-chrome"
     "ghostty"
     "tailscale"
     "docker"
     "gcloud-cli"
     "slack"
     "discord"
     "transmission"
     "craft"
     "visual-studio-code"
     "intellij-idea"
     "vlc"
     "spotify" 
-}}

brew bundle --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF
